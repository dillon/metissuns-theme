{% assign available_products = collections.all.products | where: "available" %}
<div id="home">
  {% for product in available_products %}
    <div class="product">
      <a class="no-hover" href="{{ product.url | within: collection }}">
        <img src="{{ product.featured_image.src | img_url: '700x700' }}" alt="{{ product.featured_image.alt | escape }}">
      </a>
      <div>
        <a class="sans-serif" href="{{ product.url | within: collection }}">
          <strong>{{ product.title }}</strong>
        </a>
      </div>
      <div>
        {{ product.price | money_without_trailing_zeros }}
      </div>
    </div>
  {% endfor %}
</div>